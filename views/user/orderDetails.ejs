  color: orange;
 /* color: lightyellow; */
}

.shipped {
  color: #0088ff;
  background-color:#cfeeff ;
  border-radius: 20px;
  padding: 1px 4px 1px 4px;
  /* color: lightblue; */
}

.on-delivery {
  color: green;
  /* color: lightgreen; */
}

.delivered {
  color: darkgreen;
  /* color: lightseagreen; */
}

.cancelled {
  /* color: white; */
 color: red;
}

.return {
  color: darkorange;
  /* background-color: lightcoral; */
