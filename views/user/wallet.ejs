    .wallet-card {
      background: linear-gradient(135deg, #7fe3ff, #11aafc);
      color: white;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
      text-align: center;
    }
    .wallet-card h5 {
      margin-bottom: 10px;
      font-size: 1.25rem;
      font-weight: 600;
    }
    .wallet-card h2 {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 15px;
    }
    .btn-action {
      width: 48%;
      margin-top: 10px;
    }
    .table-container {
      background: white;
      border-radius: 10px;
      padding: 15px;
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
     
    }
  </style>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <%-include('../partials/profile_NAV.ejs')%>
    <div style="display: flex; justify-content: space-around;">
    <%-include('../partials/profileSIDEBAR.ejs')%>
    <%-include('../partials/block.ejs')%>
  <div class="container-fluid" style="margin-left: 50px;">
    <div class="row">
      <!-- Sidebar -->
      

      <!-- Main Content -->
      <div class="col-md-9">
        <div class="py-4">
          <h3 class="mb-4">Your Wallet</h3>

          <!-- Wallet Overview -->
          <div class="wallet-card mb-4" style="display: flex; align-items:center;justify-content: center;gap: 30px;">
            <h2>Balance</h2>
            <h2 class="">â‚¹ <%=Wallet.balance.toFixed(2)%></h2>
           
          </div>

          <!-- Transaction History -->
          <h4>Transaction History</h4>
          <div class="table-container mt-3">
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Method</th>
                    <th>Amount</th>
                    <!-- <th>Status</th> -->
                  </tr>
                </thead>
                <tbody>
                    <% Wallet.transactions.forEach(item=>{%>
                  <tr>
                    <td><%= new Date(item.date).toLocaleDateString() %></td>
                    <td><%=item.type%></td>
                    <% if(item.type=='credit'){%>
                     <td style="color: green;">+<%=item.amount%></td>
                      <%}else{%>
                        <td style="color:red;">+<%=item.amount%></td>
                        <%}%>
                    <!-- <td><span class="badge bg-success">Completed</span></td> -->
                  </tr>
                  <%})%>
                 
                </tbody>
              </table>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
