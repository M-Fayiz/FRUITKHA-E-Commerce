<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Nest Dashboard</title>
        <meta http-equiv="x-ua-compatible" content="ie=edge" />
        <meta name="description" content="" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta property="og:title" content="" />
        <meta property="og:type" content="" />
        <meta property="og:url" content="" />
        <meta property="og:image" content="" />
        <!-- Favicon -->
        <link rel="shortcut icon" type="image/x-icon" href="/admin/imgs/theme/favicon.svg" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

        <!-- Template CSS -->
        <link href="/admin/css/main.css?v=1.1" rel="stylesheet" type="text/css" />
        <link href="/admin/css/main.css?v=1.1" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Aesthetic Table Styles */
        .table-hover tbody tr:hover {
          background-color: #f8f9fa;
        }
      
        .table thead th {
          background-color: #f1f3f5;
          text-align: center;
        }
      
        .product-table td {
          vertical-align: middle;
          text-align: center;
        }
      
        .btn-edit {
          background-color: #0d6efd;
          color: white;
        }
      
        .btn-delete {
          background-color: #dc3545;
          color: white;
        }
      
        .badge {
          font-size: 0.85rem;
        }
      
        @media (max-width: 768px) {
          .table-responsive {
            overflow-x: auto;
          }
        }
      </style>
    </head>

    <body>
       

        <%- include('../partials/sidebar.ejs') %>
        <main class="main-wrap">
            <%- include('../partials/adminHeader.ejs') %>
            <section class="content-main">
                <div>
                    <h2 class="mb-4">Inventory Management</h2>
                  
                    <!-- Inventory Table -->
                    <h3 class="mt-4">Current Inventory</h3>
                    <div class="table-responsive">
                      <table class="table table-bordered table-hover align-middle product-table">
                        <thead class="table-light">
                          <tr>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Stock Quantity</th>
                            <th>Expiry Date</th>
                            <th>Expiry Alert</th>
                            <th>Low Stock Alert</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody id="productTable">
                          <% Product.forEach(item => { %>
                            <tr>
                              <td><strong><%= item.productTitle %></strong></td>
                              <td><%= item.Category %></td>
                              <td>
                                <span class="<%= item.Stock < 10 ? 'text-danger' : 'text-success' %>">
                                  <%= item.Stock %>
                                </span>
                              </td>
                              <td><%= item.expiryDate %></td>
                              <td>
                                <!-- <% if (new Date(item.expiryDate) < new Date()) { %>
                                  <span class="badge bg-danger">Expired</span>
                                <% } else { %>
                                  <span class="badge bg-warning text-dark">Near Expiry</span>
                                <% } %> -->
                              </td>
                              <td>
                                <% if (item.Stock < 10) { %>
                                  <span class="badge bg-danger">Low Stock</span>
                                <% } else { %>
                                  <span class="badge bg-success">Sufficient</span>
                                <% } %>
                              </td>
                              <td>
                                <button class="btn btn-sm btn-primary btn-edit ">Edit</button>
                               
                              </td>
                            </tr>
                          <% }) %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                <!-- card end// -->
            </section>
            <!-- content-main end// -->
            
        </main>
        <script src="/admin/js/vendors/jquery-3.6.0.min.js"></script>
        <script src="/admin/js/vendors/bootstrap.bundle.min.js"></script>
        <script src="/admin/js/vendors/select2.min.js"></script>
        <script src="/admin/js/vendors/perfect-scrollbar.js"></script>
        <script src="/admin/js/vendors/jquery.fullscreen.min.js"></script>
        <!-- Main Script -->
        <script src="/admin/js/main.js?v=1.1" type="text/javascript"></script>
    </body>
</html>
