        <link rel="shortcut icon" type="image/x-icon" href="/admin/imgs/theme/favicon.svg" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
        <!-- Template CSS -->
        <link href="/admin/css/main.css?v=1.1" rel="stylesheet" type="text/css" />
        <style>
       .pending {
  color: orange;
}

.shipped {
  color: blue;
}

.on-delivery {
  color: green;
}

.delivered {
  color: darkgreen;
}

.cancelled {
  color: red;
}

.return {
  color: darkorange;
}

        </style>
    </head>

    <body>
        <div class="screen-overlay"></div>
        <%-include('../partials/sidebar.ejs') %>
         <%-include('../partials/block.ejs')%>
        <main class="main-wrap">
            <%-include('../partials/adminHeader')%>
            
            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Order List</h2>
                        <p>Lorem ipsum dolor sit amet.</p>
                    </div>
                </div>
                <div class="row">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Customer</th>
                                            <th>OrderStatus</th>
                                            <th>Total Price</th>
                                            <th>Order Date</th>
                                            
                                            <th>paymentMethod</th>
                                            <th class="text-end">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach(item=>{%>
                                            <tr>
                                               

                                 
            
                                                <td>#<%=item._id%></td>
                                                <td><%=item.UserID.firstName%></td>
                                                <td class="<%= 
                                                item.orderStatus === 'Pending' ? 'pending' : 
                                                item.orderStatus === 'Shipped' ? 'shipped' : 
                                                item.orderStatus === 'On Delivery' ? 'on-delivery' : 
                                                item.orderStatus === 'Delivered' ? 'delivered' : 
                                                item.orderStatus === 'Cancelled' ? 'cancelled' : 
                                                item.orderStatus === 'Return' ? 'return' : '' 
                                              %>">
                                                <%= item.orderStatus %> 
                                              </td>
                                                <td>â‚¹<%=item.Final_Amount%></td>
                                                   
                                                <td><%= new Date(item.createdAt).toISOString().split('T')[0] %></td>
                                                <td><%=item.payment%></td>
                                                <!-- <td></td> -->
                                                <td class="text-end">
                                                    <a href="/admin/order-details/<%=item._id%>" class="btn btn-sm btn-outline-primary">View</a>
                                                </td>
                                              
                                            </tr>
                                            <%})%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <!-- <div class="pagination-area mt-15 mb-50">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-start">
